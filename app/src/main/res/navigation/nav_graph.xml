<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/displayingMovies">

    <fragment
        android:id="@+id/displayingMovies"
        android:name="project.movies.searchformovies.movies.MoviesFragment"
        android:label="displaying_movies_fragment"
        tools:layout="@layout/displaying_movies_fragment" >
        <action
            android:id="@+id/action_displayingMovies_to_detailMoviesDialog"
            app:destination="@id/detailMoviesDialog" />
    </fragment>
    <dialog
        android:id="@+id/detailMoviesDialog"
        android:name="project.movies.searchformovies.DetailInformationDialog"
        android:label="DetailMoviesDialog"
        tools:layout="@layout/dialog_detail_information">
        <argument
            android:name="uriPoster"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="description"
            app:argType="string"
            app:nullable="true" />
    </dialog>
</navigation>