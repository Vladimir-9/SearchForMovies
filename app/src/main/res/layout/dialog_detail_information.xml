<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="650dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:background="@color/primary_color_500">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_thick_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tw_title"
                style="@style/subText"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ingredients" />

            <ImageView
                android:id="@+id/iv_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_image_movie"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tw_description_movie"
                style="@style/subText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                tools:text="@string/app_name" />

            <TextView
                style="@style/subText"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ingredients" />

            <TextView
                android:id="@+id/tw_ingredients"
                style="@style/subText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/app_name" />

            <Button
                android:id="@+id/bt_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/to_favourites"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>